@model EditorViewModel

<div id="@Model.UID" class="duration-editor">
    <div style="float:left">
        <span style="margin-right:5px">Дней</span>
        @(Html.Kendo().IntegerTextBox().Name(Model.UID + "_days").Min(0).Max(int.MaxValue).HtmlAttributes(new { style = "width: 100px"}))
    </div>

    <div style="float:left">
        <span style="margin:0 5px 0 10px">Часов</span>
        @(Html.Kendo().IntegerTextBox().Name(Model.UID + "_hours").Min(0).Max(int.MaxValue).HtmlAttributes(new { style = "width: 100px" }))
    </div>

    <div style="float:left">
        <span style="margin:0 5px 0 10px">Минут</span>
        @(Html.Kendo().IntegerTextBox().Name(Model.UID + "_minutes").Min(0).Max(int.MaxValue).HtmlAttributes(new { style = "width: 100px" }))
    </div>
    <div class="clear"></div>
</div>

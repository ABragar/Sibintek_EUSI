@using WebUI.Areas.Account
@model WebUI.Areas.Account.Models.Account.ResetPasswordModel
@{
    var routevalues = Url.FromCurrent(new { code = (string)null });

    ViewBag.Title = "Восстановление пароля";
}

@using (Html.BeginForm("ResetPassword", "Account", routevalues, FormMethod.Post, new Dictionary<string, object> { { "class", "account-card__form" } }))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(x => x.Code)
    @Html.InputFieldFor(x => x.NewPassword, "password")
    @Html.InputFieldFor(x => x.ConfirmPassword, "password")



    <!-- SUBMIT BUTTON -->
    <button class="btn btn-large btn-block" type="submit">Восстановить</button>

    <!-- BACK LINK -->
    <div class="actions">
        <a href="@Url.Action("Login", routevalues)" data-route="back">Назад</a>
    </div>

    <!-- HIDDEN VALIDATION MESSAGES -->
    <div class="validations">
        <div data-validation-summary>@Html.ValidationSummary(true)</div>
    </div>
}



@section card_class {no-footer}

@using WebUI.Areas.Account
@model WebUI.Areas.Account.Models.Account.PasswordRegisterModel
@{
    var routevalues = Url.FromCurrent();

    ViewBag.Title = "Регистрация";
}

@using (Html.BeginForm("Register", "Account", routevalues, FormMethod.Post, new Dictionary<string, object> { { "class", "account-card__form" } }))
{
    //TODO: вынести табы навигации из формы
    <div class="account-card__tabs">
        <a href="@Url.Action("Login", routevalues)" data-route="back" class="account-card__tab">Вход</a>
        <span class="account-card__tab account-card__tab--active">Регистрация</span>
    </div>

    @Html.AntiForgeryToken()

    @Html.InputFieldFor(x => x.Email, "text")
    @Html.InputFieldFor(x => x.FirstName, "text")
    @Html.InputFieldFor(x => x.LastName, "text")
    @Html.InputFieldFor(x => x.Password, "password")
    @Html.InputFieldFor(x => x.ConfirmPassword, "password")


    <!-- SUBMIT BUTTON -->
    <button class="btn btn-large btn-block" type="submit">Отправить</button>


    <!-- HIDDEN VALIDATION MESSAGES -->
    <div class="validations">
        <div data-validation-summary>@Html.ValidationSummary(true)</div>
    </div>
}


@section card_class {no-footer}

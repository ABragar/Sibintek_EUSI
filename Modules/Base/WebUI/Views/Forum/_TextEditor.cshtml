@{
    bool needSendButton = ViewData["NeedSendButton"] as bool? ?? true;
    string editorID = Guid.NewGuid().ToString();
    
}

@Scripts.Render("~/JS/ForumBundle")

<div class="text-editor" id="editor-@editorID">
    <div class="btn-toolbar" data-role="editor-toolbar" data-target="#editor">
        <div class="btn-group">
            <a class="btn" data-edit="bold" title="Жирный"><i class="fa fa-bold"></i></a>
            <a class="btn" data-edit="italic" title="Курсив"><i class="fa fa-italic"></i></a>
            <a class="btn" data-edit="underline" title="Подчеркнутый"><i class="fa fa-underline"></i></a>
            <a class="btn" data-edit="strikethrough" title="Зачеркнутый"><i class="fa fa-strikethrough"></i></a>
        </div>
        <div class="btn-group">
            <a class="btn" data-edit="insertunorderedlist" title="Маркеры"><i class="fa fa-fa-list-ul"></i></a>
            <a class="btn" data-edit="insertorderedlist" title="Нумерация"><i class="fa fa-list-ol"></i></a>
        </div>
        <div class="btn-group">
            <a class="btn" data-edit="justifyleft" title="Выровнять по левому краю"><i class="fa fa-align-left"></i></a>
            <a class="btn" data-edit="justifycenter" title="Выровнять по центру"><i class="fa fa-align-center"></i></a>
            <a class="btn" data-edit="justifyright" title="Выровнять по правому краю"><i class="fa fa-align-right"></i></a>
            <a class="btn" data-edit="justifyfull" title="Выровнять по ширине"><i class="fa fa-align-justify"></i></a>
        </div>
        <div class="btn-group">
            <a class="btn dropdown-toggle" data-toggle="dropdown" title="Ссылка">
                <i class="fa fa-link"></i>
            </a>
            <div class="dropdown-menu link-dropdown-menu" >
                <div class="input-group">
                    <input class="form-control" placeholder="URL" type="text" data-edit="createLink" />
                    <span class="input-group-btn">
                        <button class="btn btn-default" type="button" >Добавить</button>
                    </span>
                </div>
            </div>
            <a class="btn @(needSendButton ? "btn-unrequired" : "")" data-edit="unlink" title="Удалить ссылку"><i class="fa fa-unlink"></i></a>
        </div>
        <div class="btn-group">
            <a class="btn @(needSendButton ? "btn-unrequired" : "")" data-edit="undo" title="Отменить"><i class="fa fa-undo"></i></a>
            <a class="btn @(needSendButton ? "btn-unrequired" : "")" data-edit="redo" title="Повторить"><i class="fa fa-repeat"></i></a>
        </div>
        @{
            if (needSendButton)
            {<text>
                <div class="pull-right">
                    <button type="button" class="btn btn-primary btn-send">Отправить</button>
                </div>
            </text>}
        }
    </div>

    <div class="editor-content">
    </div>
</div>

<script>
    $(function () {
        $("#editor-@editorID input[data-edit='createLink']").on("click", function (e) {
            return false;
        });
    });
</script>
